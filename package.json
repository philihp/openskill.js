{
  "name": "openskill",
  "version": "0.1.0",
  "description": "Weng-Lin Bayesian approximation method for online skill-ranking.",
  "private": true,
  "scripts": {
    "build": "babel src -d dist",
    "lint": "eslint .",
    "release": "np",
    "test": "nyc ava"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/philihp/openskill.js.git"
  },
  "keywords": [
    "ranking"
  ],
  "author": "Philihp Busby <philihp@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/philihp/openskill.js/issues"
  },
  "homepage": "https://github.com/philihp/openskill.js#readme",
  "devDependencies": {
    "@ava/babel": "1.0.1",
    "@babel/cli": "7.8.4",
    "@babel/core": "7.9.0",
    "@babel/preset-env": "7.9.5",
    "ava": "3.7.1",
    "babel-loader": "8.1.0",
    "eslint": "6.8.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "4.2.5",
    "lint-staged": "10.1.7",
    "nyc": "15.0.1",
    "prettier": "2.0.5"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:prettier/recommended"
    ]
  },
  "nycConfig": {
    "all": true,
    "exclude": [
      "{dist,coverage,media,test-d,test-tap}/**",
      "*.config.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text"
    ]
  },
  "ava": {
    "babel": true
  }
}
